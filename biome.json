{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn"
            }
        },
        "ignore": [".next"]
    },
    "formatter": {
        "indentStyle": "tab",
        "ignore": [".next", "./public/getConfig.json"],
        "indentWidth": 4,
        "lineWidth": 120
    }
}
