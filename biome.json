{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"nursery": {
				"useSortedClasses": "info"
			}
		},
		"ignore": [".next", "pnpm-lock.yaml", "node_modules", "minio"]
	},
	"formatter": {
		"indentStyle": "tab",
		"ignore": [".next", "pnpm-lock.yaml", "node_modules", "minio"],
		"indentWidth": 4,
		"lineWidth": 120
	}
}
